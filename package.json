{
  "name": "@eslint-stylistic/monorepo",
  "type": "module",
  "version": "5.2.1",
  "private": true,
  "packageManager": "pnpm@10.13.1",
  "license": "MIT",
  "scripts": {
    "build": "pnpm -r run build",
    "dev": "pnpm -r --parallel run dev",
    "lint": "eslint . --cache",
    "update": "tsx scripts/update.ts && pnpm run lint --fix",
    "publish:ci": "tsx scripts/publish.ts",
    "test": "vitest -c vitest.config.unit.ts",
    "test:fixtures": "vitest -c vitest.config.fixtures.ts",
    "check": "pnpm run update && pnpm run build && pnpm run typecheck && pnpm run test --run",
    "typecheck": "vue-tsc --noEmit",
    "prepare": "simple-git-hooks",
    "docs": "pnpm -C docs run docs:dev",
    "docs:build": "pnpm -C docs run docs:build",
    "play:lint": "pnpm -C playground run lint"
  },
  "devDependencies": {
    "@antfu/eslint-config": "catalog:dev",
    "@antfu/eslint-define-config": "catalog:dev",
    "@antfu/utils": "catalog:dev",
    "@babel/eslint-parser": "catalog:test",
    "@babel/plugin-syntax-decorators": "catalog:test",
    "@babel/plugin-syntax-do-expressions": "catalog:test",
    "@babel/plugin-syntax-function-bind": "catalog:test",
    "@babel/preset-react": "catalog:test",
    "@codecov/rollup-plugin": "catalog:build",
    "@stylistic/eslint-plugin": "workspace:*",
    "@types/estraverse": "catalog:dev",
    "@types/estree": "catalog:dev",
    "@types/node": "catalog:dev",
    "@types/picomatch": "catalog:dev",
    "@types/semver": "catalog:dev",
    "@typescript-eslint/parser": "catalog:dev",
    "@typescript-eslint/types": "catalog:prod",
    "@typescript-eslint/utils": "catalog:dev",
    "@vitest/coverage-v8": "catalog:test",
    "@vitest/ui": "catalog:test",
    "change-case": "catalog:dev",
    "escape-string-regexp": "catalog:dev",
    "eslint": "catalog:dev",
    "eslint-plugin-format": "catalog:dev",
    "eslint-visitor-keys": "catalog:prod",
    "eslint-vitest-rule-tester": "catalog:test",
    "espree": "catalog:prod",
    "estraverse": "catalog:prod",
    "execa": "catalog:dev",
    "fast-glob": "catalog:dev",
    "gray-matter": "catalog:dev",
    "jiti": "catalog:dev",
    "json-schema-to-typescript-lite": "catalog:dev",
    "lint-staged": "catalog:dev",
    "ohash": "catalog:dev",
    "picomatch": "catalog:prod",
    "prettier": "catalog:dev",
    "semver": "catalog:dev",
    "simple-git-hooks": "catalog:dev",
    "taze": "catalog:dev",
    "tsdown": "catalog:build",
    "tsx": "catalog:dev",
    "typescript": "catalog:dev",
    "vite": "catalog:dev",
    "vitest": "catalog:test",
    "vue": "catalog:docs",
    "vue-eslint-parser": "catalog:test",
    "vue-tsc": "catalog:dev"
  },
  "resolutions": {
    "twoslash-eslint": "catalog:docs",
    "vite": "catalog:dev",
    "vitest": "catalog:test",
    "vue": "catalog:docs",
    "vue-tsc": "catalog:dev"
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged"
  },
  "lint-staged": {
    "*": "eslint --fix"
  }
}
